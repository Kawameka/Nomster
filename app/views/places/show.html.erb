<div class="booyah-box offset-1 col-10">
    <h1><%= @place.name %></h1>
    <i><%= @place.address %></i>
    <br/><br/>
    <p><%= @place.description %></p>
    
    <% if @place.latitude.present? && @place.longitude.present? %>
        <script>

            function initMap() {
            var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: myLatLng
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Hello World!'
            });
            }
        </script>

        <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDL5aXjUO7fbGSu38vuFTG3YH-90Y-xWI4&callback=initMap">
        </script>

        <div id="map"></div>
        <br />
    <% end %>


    <div class='right'>
        <% if current_user && current_user == @place.user %>
            <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
        <!-- "method:" allows you to specfic which verb you are using from the routes table -->
        <!-- "data:" along with "confirm:" allows a popup to appear -->
        <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this place?'}, class: 'btn btn-danger' %>
        <% end %>        
    </div>
</div>
<div class="clear"></div>
<%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
    <%= f.input :message %>
    <!-- creates a dropdown menu that pulls selections from RATINGS class in comment.rb -->
    <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
    <%= f.submit "Add a comment", class: 'btn btn-primary' %>
<% end %>

<h1>Comments</h1>

<% @place.comments.each do |comment| %>
    <div>
        <blockquote>
            <% if comment.humanized_rating.present? %>
                <b><%= comment.humanized_rating %></b> -
            <% end %>
            <%= comment.message %>
            <small><%= comment.user.email %></small>
        </blockquote>
    </div>
<% end %>
